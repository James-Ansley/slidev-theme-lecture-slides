{
  "name": "slidev-theme-lecture-slides",
  "version": "0.0.8",
  "description": "No nonsense lecture slides",
  "license": "MIT",
  "author": {
    "name": "James Ansley"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/James-Ansley/slidev-theme-lecture-slides.git"
  },
  "keywords": [
    "slidev-theme",
    "slidev"
  ],
  "engines": {
    "node": ">=14.0.0",
    "slidev": ">=0.19.3"
  },
  "scripts": {
    "build": "slidev build example.md",
    "dev": "slidev example.md --open",
    "export": "slidev export example.md",
    "screenshot": "slidev export example.md --format png"
  },
  "dependencies": {
    "@slidev/types": "^0.42.5",
    "codemirror-theme-vars": "^0.1.2",
    "prism-theme-vars": "^0.2.4",
    "theme-vitesse": "^0.7.2"
  },
  "devDependencies": {
    "@slidev/cli": "^0.42.5"
  },
  "slidev": {
    "colorSchema": "both",
    "highlighter": "all",
    "defaults": {
      "fonts": {
        "sans": "Helvetica",
        "mono": "Fira Code"
      },
      "hightlighter": "prism"
    }
  }
}
